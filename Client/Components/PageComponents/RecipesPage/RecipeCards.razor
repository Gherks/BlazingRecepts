@using BlazingRecept.Client.Components.PageComponents.Base
@using BlazingRecept.Client.Components.Common
@using BlazingRecept.Shared.Dto
@using BlazingRecept.Shared.Extensions

@inherits PageComponentBase

@if (RecipeDtos != null && RecipeDtos.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 row-cols-xl-6 g-1">
        @foreach (var recipe in RecipeDtos)
        {
            <div class="col">
                <div class="card h-100" style="cursor: pointer; max-width: 250px; margin: 0 auto;" @onclick="@(() => HandleRecipeNavigation(recipe))">
                    <div class="card-header text-center py-1">
                        <h6 class="card-title mb-0">@recipe.Name</h6>
                    </div>
                    <div class="card-body d-flex flex-column p-2">
                        <div class="card mb-1 flex-grow-1">
                            <div class="card-body text-center p-2">
                                <h6 class="text-muted mb-1" style="font-size: 0.75rem;">Per portion</h6>
                                <div class="row g-1">
                                    <div class="col-6">
                                        <strong style="font-size: 0.7rem;">Kalorier</strong>
                                        <div style="font-size: 0.7rem;">@recipe.GetCaloriesPerPortion() kcal</div>
                                    </div>
                                    <div class="col-6">
                                        <strong style="font-size: 0.7rem;">Protein</strong>
                                        <div style="font-size: 0.7rem;">@recipe.GetProteinPerPortion() g</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card flex-grow-1">
                            <div class="card-body text-center p-2">
                                <h6 class="card-title mb-1" style="font-size: 0.75rem;">Protein per kalori</h6>
                                <div class="d-flex justify-content-center">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        int currentMeat = i;
                                        @if (currentMeat <= GetProteinPerCalorieStars(recipe))
                                        {
                                            <i class="fa-solid fa-drumstick-bite text-danger" style="font-size: 0.9rem;"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-regular fa-circle text-danger" style="font-size: 0.9rem;"></i>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
