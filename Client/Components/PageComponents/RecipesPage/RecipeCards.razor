@using BlazingRecept.Client.Components.PageComponents.Base
@using BlazingRecept.Client.Components.Common
@using BlazingRecept.Shared.Dto
@using BlazingRecept.Shared.Extensions

@inherits PageComponentBase

@if (IsLoading)
{
    <LoadingSpinner Text="Laddar..." />
}
else
{
    @if (RecipeDtos != null && RecipeDtos.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-3">
            @foreach (var recipe in RecipeDtos)
            {
                <div class="col">
                    <div class="card h-100" style="cursor: pointer;" @onclick="@(() => HandleRecipeNavigation(recipe))">
                        <div class="card-header text-center">
                            <h5 class="card-title mb-0">@recipe.Name</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="card mb-2 flex-grow-1">
                                <div class="card-body text-center">
                                    <h6 class="text-muted mb-3">Per portion</h6>
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Kalorier</strong>
                                            <div>@recipe.GetCaloriesPerPortion() kcal</div>
                                        </div>
                                        <div class="col-6">
                                            <strong>Protein</strong>
                                            <div>@recipe.GetProteinPerPortion() g</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card flex-grow-1">
                                <div class="card-body text-center">
                                    <h6 class="card-title mb-3">Protein per kalori</h6>
                                    <div class="d-flex justify-content-center">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            int currentStar = i;
                                            @if (currentStar <= GetProteinPerCalorieStars(recipe))
                                            {
                                                <i class="fa-solid fa-star text-warning" style="font-size: 1.5rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-regular fa-star text-warning" style="font-size: 1.5rem;"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
