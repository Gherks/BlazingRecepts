@using BlazingRecept.Client.Components.Utilities;

@inherits ComponentBase

<Modal @ref="_modal" Title="Remove ingredient">
    <Body>
        <p>Are you sure you want to remove <b>@GetIngredientName()</b></p>
    </Body>
    <Buttons>
        <button class="btn btn-primary" type="button" @onclick="@(_ => Confirm())">Yes</button>
        <button class="btn btn-secondary" type="button" @onclick="@(_ => Cancel())">Cancel</button>
    </Buttons>
</Modal>